<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Barcode Field -->
    <EditText
        android:id="@+id/dialog_item_barcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Barcode"
        android:inputType="text"
        android:enabled="false"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Item Name Field -->
    <EditText
        android:id="@+id/dialog_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Item Name"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Quantity Field -->
    <EditText
        android:id="@+id/dialog_item_qty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Quantity"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Stock-In Field -->
    <EditText
        android:id="@+id/dialog_item_stockIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Stock-In"
        android:inputType="number"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Category Field -->
    <EditText
        android:id="@+id/dialog_item_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Category"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="8dp" />

    <!-- Location Field -->
    <EditText
        android:id="@+id/dialog_item_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Location"
        android:inputType="text"
        android:padding="10dp"
        android:layout_marginBottom="16dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/dialog_btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@android:color/white"
        android:padding="12dp" />

</LinearLayout>
